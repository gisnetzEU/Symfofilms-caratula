 {% extends 'base.html.twig' %}
 {% block title %}Catálogo de películas{% endblock %}
 {% block main %}
  {{ parent() }}
  <p>Listado de películas en <b>Fymfofilms</b>.</p>
  
  <table class="table table-striped table-bordered">
    <tr>
      <th>ID</th>
      <th>Título</th>
      <th>Duración</th>
      <th>Director</th>
      <th>Género</th>
      <th>Operaciones</th>   
    </tr>
    {% for peli in peliculas %}
    <tr>
      <td>{{ peli.id }}</td>
      <td>{{ peli.titulo }}</td>
      <td>{{ peli.duracion }} min.</td>
      <td>{{ peli.director }}</td>
      <td>{{ peli.genero }}</td>
      <td class="text-center">
        <a href="{{ path('pelicula_show', {'id':peli.id}) }}">
          <img height="25" width="25" src="{{ asset('images/buttons/show.png') }}"
            alt="Ver detalles" title="Ver detalles"></a>
        <a href="/pelicula/edit/{{peli.id}}">
          <img src="{{ asset('images/buttons/update.png') }}"
            alt="Modificar" title="Modificar" height="20" width="20"></a>        
         <a href="/pelicula/delete/{{peli.id}}">
          <img height="25" width="25" src="{{ asset('images/buttons/delete.png') }}"
            alt="Borrar" title="Borrar"></a>
      </td>
    </tr>
    {% endfor %}
  </table>
{% endblock %}